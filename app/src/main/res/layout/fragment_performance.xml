<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".fragments.PerformanceFragment">
        <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="#F44336"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/back"
            android:src="@drawable/ic_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/appName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/calistoga"
            android:text="Performance"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />
    </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:backgroundTint="@color/red"
            app:cardCornerRadius="20dp"
            android:elevation="8dp"
            android:layout_marginTop="-20dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/ll1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <TextView
            android:id="@+id/totalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.8 CGPA"
            android:padding="10dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/red"
            android:textSize="30sp"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/pieChart"
            />
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_centerHorizontal="true" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@id/cv"
            app:layout_constraintBottom_toTopOf="@id/ll2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="4dp"
                android:text="Mathematics I"
                android:textAlignment="center"
                android:fontFamily="@font/calistoga"
                android:textColor="@color/black"
                app:drawableLeftCompat="@drawable/circle"
                app:drawableTint="@color/purple_200" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="4dp"
                android:text="Electrical Engineering Fundamentals"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/calistoga"
                app:drawableLeftCompat="@drawable/circle"
                app:drawableTint="#FFEB3B" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:padding="4dp"
                android:text="Engineered Drawings"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/calistoga"
                app:drawableLeftCompat="@drawable/circle"
                app:drawableTint="@color/purple_200" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/forward"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="English for professionals"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/calistoga"
            app:drawableLeftCompat="@drawable/circle"
            app:drawableTint="#4CAF50" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="C language"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:fontFamily="@font/calistoga"
            app:drawableLeftCompat="@drawable/circle"
            app:drawableTint="#2196F3" />
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/forward"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="20dp"
            app:iconSize="40dp"
            app:icon="@drawable/forward"
            app:tint="@color/black"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll2"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/backward"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cornerRadius="20dp"
            app:iconSize="40dp"
            android:rotation="180"
            app:icon="@drawable/forward"
            app:tint="@color/black"
            android:backgroundTint="@color/red"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/forward"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>